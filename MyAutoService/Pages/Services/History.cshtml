@page
@model MyAutoService.Pages.Services.HistoryModel
@{
}

<div class="container pt-4 row border">
	<div class="col-6">
		<h2 class="text-info py-2 ">History Service </h2>

	</div>
	<div class="col-3 offset-3 text-right py-2">
		<a asp-page="/Cars/Index" asp-route-userId="@Model.UserId" class="btn btn-outline-success form-control">
			back To List
		</a>
	</div>
</div>

@if (Model.ServiceHeaders.Count == 0)
{
	<div class="alert aler-info">
		Thereis no history
	</div>
}
else
{
	<div class="container pt-5">
		<div class="card">
			<div class=" card-header bg-dark text-light ml-0 row container">
				<div class="col-1 text-center pt-3 text-white-50">
					<i class="fas fa-user"></i>
				</div>
				<div class="col-5">
					<label class="text-info">
						@Model.ServiceHeaders[0].Car.ApplicationUser.Name
					</label>
					<br />
					<label class="text-info">
						@Model.ServiceHeaders[0].Car.ApplicationUser.Email / @Model.ServiceHeaders[0].Car.ApplicationUser.PhoneNumber
					</label>

				</div>
				<div class="col-5">
					<label class="text-info">
						@Model.ServiceHeaders[0].Car.Model /@Model.ServiceHeaders[0].Car.Color
					</label>
					<br />
					<label class="text-info">
						@Model.ServiceHeaders[0].Car.Name
						</label>
				</div>
				<div>
					class="col-1 text-center pt-3 text-white-50">
					<i class="fas fa-car"></i>
				</div>
			</div>
		</div>
		<div class="card-body">
			<table class="table table-striped border">
				<tr class="table-secondary">
					<th>
						@Html.DisplayNameFor(m => m.ServiceHeaders[0].Miles)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.ServiceHeaders[0].TotalPrice)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.ServiceHeaders[0].Description)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.ServiceHeaders[0].Dateadded)
					</th>
					<th></th>
				</tr>
				@foreach (var item in Model.ServiceHeaders)
				{
					<tr>
						<td>
							@item.Miles
						</td>
						<td>
							@item.TotalPrice.ToString("#,Euro")
						</td>
						<td>
							@item.Description
						</td>
						<td>
							@item.Dateadded
						</td>
						<td>
							<a asp-page="Details" class="btn btn-info form-control"
							   asp-route-serviceid="@item.Id">
								Description
							</a>
						</td>

					</tr>

				}
			</table>
		</div>
	</div>
}