@page
@model MyAutoService.Pages.ServiceTypes.EditModel

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">
	Edit Service'@Model.ServiceType.Name'
</h2>
<hr />

<form method="post">
	<input type="hidden" asp-for="ServiceType.Id" />
	<div class="border p-3">
		<div class="form-group row">
			<div class=" col-2 ">
				Type Service
			</div>
			<div class="col-5">
				<input asp-for="ServiceType.Name " class="form-control" />
				<span asp-validation-for="ServiceType.Name"></span>
			</div>

		</div>

		<div class="form-group row">
			<div class=" col-2 ">
				Type  Price Service
			</div>
			<div class="col-5">
				<input asp-for="ServiceType.Price " class="form-control" />
				<span asp-validation-for="ServiceType.Price"></span>
			</div>

			<div class="form-group row">
				<div class="col-5 offst-2"></div>
				<div class="row">
					<div class="col-6">
						<input type="submit" class=" btn btn-info form-control" value="Edit" />
					</div>
					<div class="col-6">
						<div asp-page="Index" class=" btn btn-outline-success  form-cntrol">return to List</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts
	{
	<partial name="_ValidationScriptsPartial">
	}
