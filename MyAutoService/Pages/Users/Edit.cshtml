@page
@model MyAutoService.Pages.Users.EditModel
@{
}
<br />
<h2 class="text-info">
	Edit Customer'@Model.ApplicationUser.Name'
</h2>
<hr />

<form method="post">
	<input type="hidden" asp-for="ApplicationUser.Id" />
	<div class="border p-3">
		<div class="form-group row">
			<div class=" col-2 ">
				NAme
			</div>
			<div class="col-5">
				<input asp-for="ApplicationUser.Name " class="form-control" />
				<span asp-validation-for="ApplicationUser.Name"></span>
			</div>
		</div>

		<div class="form-group row">
			<div class=" col-2 ">
				CIty
			</div>
			<div class="col-5">
				<input asp-for="ApplicationUser.City " class="form-control" />
				<span asp-validation-for="ApplicationUser.Name"></span>
			</div>
		</div>

		<div class="form-group row">
			<div class=" col-2 ">
				PosTalCode
			</div>
			<div class="col-5">
				<textarea asp-for="ApplicationUser.PhoneNumber " class="form-control"></textarea>
				<span asp-validation-for="ApplicationUser.PhoneNumber"></span>
			</div>
		</div>


		<div class="form-group row">
			<div class=" col-2 ">
				PosTalCode
			</div>
			<div class="col-5">
				<textarea asp-for="ApplicationUser.PostalCode " class="form-control"></textarea>
				<span asp-validation-for="ApplicationUser.PostalCode"></span>
			</div>
		</div>

		<div class="form-group row">
			<div class=" col-2 ">
				Address
			</div>
			<div class="col-5">
				<input asp-for="ApplicationUser.Address " class="form-control" />
				<span asp-validation-for="ApplicationUser.Address"></span>
			</div>
		</div>

		<div class="form-group row">
			<div class=" col-2 ">
				Role naqsh
			</div>
			<div class="col-5">
			<select asp-for="SelectedRole" asp-items="Model.Roles" class="form-control"></select>
			</div>
		</div>

		<div class=" form-group row">
			<div class="col-5 offst-2"></div>
			<div class="row">
				<div class="col-6">
					<input type="submit" class=" btn btn-info form-control" value="Edit" />
				</div>
				<div class=" col-6">
					<div asp-page="Index" class=" btn btn-outline-success  form-cntrol">return to List</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts
