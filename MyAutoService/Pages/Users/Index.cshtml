@page
@model MyAutoService.Pages.Users.IndexModel
@{
}
<form>
	<div class=" border" style="background-color : white">
		<div class="row p-3">
			<div class="text-info">Our List Service</div>

			<div class="col-6  ">

				<div class="text-info">Our List Service</div>
			</div>
			<div class="col-6 text-left ">
				<a asp-page="/Account/Register" asp-area="Identity" class="btn btn-info">
					Add Our service
					<i class="fas fa-plus fa-xs"></i>
				</a>
			</div>
		</div>
	</div>
	<div class="border">
		<br />
		<div>
			@if (Model.UsersListViewModel.ApplicationUserList.Count > 0)
			{
				<table class=" table table-striped boarder">
					<tr class="table-secondary">
						<th>
							@Html.DisplayNameFor(m => m.UsersListViewModel.applicationUsersList[0].Name)
						</th>
						<th>
							@Html.DisplayNameFor(m => m.UsersListViewModel.applicationUsersList[0].PhoneNumber)
						</th>
						<th>
							@Html.DisplayNameFor(m => m.UsersListViewModel.applicationUsersList[0].Email)
						</th>
						<th></th>
					</tr>
					@foreach (var user in Model.UsersListViewModel.applicationUsersList)
					{
						<tr>
							<td>
								@user.Name
							</td>
							<td>
								@user.PhoneNumber
							</td>
							<td>
								@user.Email
							</td>
							<td style="width : 150px">


								<div class="btn btn-group" role="group">
									<a class=" btn btn-outline-primary " asp-page="Edit" asp-route-Id="@user.Id">
										<i class="fas fa-edit fa-sm"></i>
									</a>
									<a class=" btn btn-outline-success" asp-page="Details" asp-route-Id="@user.Id">
										<i class="fas fa-list-alt fa-sm"></i>
									</a>
									<a class=" btn btn-outline-danger " asp-page="Delete" asp-route-Id="@user.Id">
										<i class="fas fa-edit fa-sm"></i>
									</a>
								</div>
							</td>
						</tr>
					}
				</table>
			}
			else
			{

			}
		</div>
	</div>
</form>
